{% extends "AdminBundle::adminLayout.html.twig" %}

{% block header %}
    {% include 'AdminBundle::includes/agenda.html.twig' %}
{% endblock %}

{% block titulo %}Nueva restricción{% endblock %}

{% block menu %}{% endblock %}

{% block cuerpo %}

<form action="{{ path('restriccion_save', { 'id' : id }) }}" method="post" {{ form_enctype(form) }}>
    <fieldset>
    	<legend>Datos de la restricción</legend>
    	{{ form_widget(form) }}
    </fieldset>
    
    <button class="action blue" type="submit">
        <span class="label">Crear</span>
    </button>
    <a href="{{ path('agenda_show', {'id' : id }) }}" class="button left"><span class="label">Regresar al listado</span></a>
    
</form>
{% endblock %}