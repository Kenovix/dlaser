{% extends "AdminBundle::adminLayout.html.twig" %}

{% block header %}
    {% include 'AdminBundle:includes:reserva.html.twig' %}
{% endblock %}

{% block titulo %}Detalles de la reserva{% endblock %}

{% block menu %}
    {% if is_granted('ROLE_AUX') %}
    	<li><a href="{{ path('cupo_new') }}">Crear</a></li>
    	<li><a href="{{ path('cupo_search') }}" class="sub_sel">Consultar</a></li>
    {% elseif is_granted('ROLE_ADMIN') %}
    	<li><a href="{{ path('agenda_list') }}">Listado</a></li>
    	<li><a href="{{ path('cupo_list') }}" class="sub_sel">Reserva</a></li>
    {% endif %}
{% endblock %}

{% block cuerpo %}

{% if app.session.flash('info') %}
    <div class="success">
        <span>{{ app.session.flash('info') }}</span>
    </div>
{% endif %}

    <table>
        <tbody>
            <tr>
                <th>Hora</th>
                <td><b>{{ cupo.hora|date('d-m-Y H:i') }}</b></td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>
                	{% if cupo.estado == 'A' %}
                		Activo
                	{% endif %}
                </td>
            </tr>
            <tr>
                <th>Nota</th>
                <td>{{ cupo.nota }}</td>
            </tr>
            <tr>
                <th>Registra</th>
                <td>{{ usuario.nombre }} {{ usuario.apellido }}</td>
            </tr>
            <tr>
                <th>Código</th>
                <td>{{ cupo.verificacion }}</td>
            </tr>
            <tr>
                <th>Paciente</th>
                <td>{{ cupo.paciente.priNombre }} {{ cupo.paciente.segNombre }} {{ cupo.paciente.priApellido }} {{ cupo.paciente.segApellido }}</td>
            </tr>
            <tr>
                <th>Cargo</th>
                <td><b>{{ cupo.cargo.nombre }}</b></td>
            </tr>
            <tr>
                <th>Preparación</th>
                <td><b>{{ cupo.cargo.indicacion }}</b></td>
            </tr>
            <tr>
                <th>Lugar</th>
                <td><b>{{ cupo.agenda.sede.nombre }}</b></td>
            </tr>
            <tr>
                <th>Dirección</th>
                <td><b>{{ cupo.agenda.sede.direccion }}</b></td>
            </tr>
        </tbody>
    </table>
    
    
    <a href="{{ path('cupo_edit', { 'id': cupo.id }) }}" class="button left"><span class="label">Modificar reserva</span></a>
    <a href="{{ path('cupo_new') }}" class="button middle"><span class="label">Nueva reserva</span></a>
{% endblock %}