{% extends "AdminBundle::adminLayout.html.twig" %}

{% block header %}
    {% include 'AdminBundle::includes/parametrizar.html.twig' %}
{% endblock %}

{% block titulo %}Nueva empresa{% endblock %}

{% block menu %}
    <li><a href="{{ path('empresa_list') }}">Empresa</a></li>
    <li><a href="{{ path('cliente_list') }}">Cliente</a></li>
    <li><a href="{{ path('cargo_list') }}">Cargo</a></li>
    <li><a href="{{ path('paciente_list') }}" class="sub_sel">Paciente</a></li>
    <li><a href="#">Factura</a></li>
    <li><a href="{{ path('usuario_list') }}">Usuario</a></li>
{% endblock %}

{% block cuerpo %}

{% if app.session.flash('info') %}
    <div class="success">
        <span>{{ app.session.flash('info') }}</span>
    </div>
{% endif %}

<form action="{{ path('paciente_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <fieldset>
    	<legend>Datos del paciente</legend>
    	{{ form_widget(edit_form) }}
    </fieldset>
    
    <button class="action blue" type="submit">
        <span class="label">Modificar</span>
    </button>
    <a href="{{ path('paciente_show', {'id': entity.id}) }}" class="button left"><span class="label">Detalle del paciente</span></a>
    
</form>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/cahis/js/jquery.chained.remote.js') }}"></script>
    
    <script type="text/javascript" charset="utf-8">
    	$(function() {    
            $("#newPaciente_mupio").remoteChained("#newPaciente_depto", "{{ path('municipios', { 'id': entity.mupio }) }}");
        });     
    </script>
{% endblock %}
