{% extends "AdminBundle::adminLayout.html.twig" %}

{% block header %}
    {% include 'AdminBundle::includes/usuarios.html.twig' %}
{% endblock %}

{% block titulo %}Asignar los permisos de las sedes al usuario {{entity.nombre}}{% endblock %}

{% block menu %}
    <li><a href="{{ path('usuario_list') }}" class="sub_sel">Usuario</a></li>
    <li><a href="#">Cliente</a></li>
    <li><a href="#">Cargo</a></li>
    <li><a href="#">Paciente</a></li>
    <li><a href="#">Factura</a></li>
    <li><a href="#">Empresa</a></li>
{% endblock %}

{% block cuerpo %}
    
{% if app.session.flash('info') %}
    <div class="success">
        <span>{{ app.session.flash('info') }}</span>
    </div>
{% endif %}
    
    <table>
        <thead>
            <tr>
                <th>No.</th>
                <th>Nombre</th>
                <th>Ciudad</th>
                <th>Acc√≠on</th>
            </tr>
        </thead>
        <tbody>
        
        {% for permiso in permisos %}            
            <tr>
                <td>{{ loop.index }}</td>
                <td><a href="{{ path('sede_show', {'id':permiso.id}) }}">{{ permiso.nombre }}</a></td>
                <td>{{ permiso.ciudad }}</td>
                <td>               
    			<a><a href="{{ path('permiso_delete', { 'usuario': entity.id, 'sede': permiso.id }) }}" class="button left"><span class="label">Quitar</span></a>
    			</td>
            </tr>
        {% endfor %} 
       
       {% for sede in sedes %}  
            <tr>            
                <td>{{ loop.index }}</td>
                <td><a href="{{ path('sede_show', {'id':sede.id}) }}">{{ sede.nombre }}</a></td>
                <td>{{ sede.ciudad }}</td>
                <td>                    			
    			<a href="{{ path('permiso_save', { 'usuario': entity.id, 'sede': sede.id }) }}" class="button left"><span class="label">Asignar</span></a>
    			</td>   			
            </tr>
       {% endfor %}
      </tbody>
    </table>
    
    <a href="{{ path('usuario_show', { 'id': entity.id }) }}" class="button left"><span class="label">Regresar al usuario</span></a>
{% endblock %}
    
