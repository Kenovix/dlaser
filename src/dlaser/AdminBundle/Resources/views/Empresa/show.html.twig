{% extends "AdminBundle::adminLayout.html.twig" %}

{% block header %}
    {% include 'AdminBundle::includes/parametrizar.html.twig' %}
{% endblock %}

{% block titulo %}Detalles de la empresa{% endblock %}

{% block menu %}
    <li><a href="{{ path('empresa_list') }}" class="sub_sel">Empresa</a></li>
    <li><a href="{{ path('cliente_list') }}">Cliente</a></li>
    <li><a href="{{ path('cargo_list') }}">Cargo</a></li>
    <li><a href="{{ path('paciente_list') }}">Paciente</a></li>
{% endblock %}

{% block cuerpo %}

    <table>
        <tbody>
            <tr>
                <th>Nit</th>
                <td>{{ entity.nit }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>
        </tbody>
    </table>
    
    
    <a href="{{ path('empresa_edit', { 'id': entity.id }) }}" class="button left"><span class="label">Modificar empresa</span></a>
    <a href="{{ path('empresa_list') }}" class="button middle"><span class="label">Regresar al listado</span></a>
    
    <h2>Sedes de la empresa</h2>
    
{% if app.session.flash('info') %}
    <div class="success">
        <span>{{ app.session.flash('info') }}</span>
    </div>
{% endif %}
    
    <table>
        <thead>
            <tr>
                <th>No.</th>
                <th>Nombre</th>
                <th>Ciudad</th>
            </tr>
        </thead>
        <tbody>
        {% for sede in sedes %}
            <tr>
                <td>{{ loop.index }}</td>
                <td><a href="{{ path('sede_show', {'id':sede.id}) }}">{{ sede.nombre }}</a></td>
                <td>{{ sede.ciudad }}</td>
            </tr>
         {% else %}
         	<tr>
         		<td colspan="3">No tenemos sedes creadas.</td>
         	</tr>
        {% endfor %}
        </tbody>
    </table>
    
    <a href="{{ path('sede_new', { 'id': entity.id }) }}" class="button left"><span class="label">Crear sede</span></a>
{% endblock %}
