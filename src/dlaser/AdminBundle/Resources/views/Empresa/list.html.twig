{% extends "AdminBundle::adminLayout.html.twig" %}

{% block header %}
    {% include 'AdminBundle::includes/parametrizar.html.twig' %}
{% endblock %}

{% block titulo %}Listado de empresas{% endblock %}

{% block menu %}
    <li><a href="{{ path('empresa_list') }}" class="sub_sel">Empresa</a></li>
    <li><a href="{{ path('cliente_list') }}">Cliente</a></li>
    <li><a href="{{ path('cargo_list') }}">Cargo</a></li>
    <li><a href="{{ path('paciente_list') }}">Paciente</a></li>
{% endblock %}

{% block cuerpo %}
    <table>
        <thead>
            <tr>
                <th>No.</th>
                <th>Nit</th>
                <th>Nombre</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ loop.index }}</td>
                <td><a href="{{ path('empresa_show', {'id':entity.id}) }}">{{ entity.nit }}</a></td>
                <td>{{ entity.nombre }}</td>
            </tr>
         {% else %}
         	<tr>
         		<td colspan="4">No tenemos empresas creadas.</td>
         	</tr>
        {% endfor %}
        </tbody>
    </table>
    
    <a href="{{ path('empresa_new') }}" class="button left"><span class="label">Nueva empresa</span></a>
{% endblock %}
