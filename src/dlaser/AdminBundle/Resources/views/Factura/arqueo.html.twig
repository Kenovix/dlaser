{% extends "AdminBundle::adminLayout.html.twig" %}

{% block header %}
	{% include 'AdminBundle:includes:factura.html.twig' %}
{% endblock %}

{% block titulo %}Cierre de caja{% endblock %}

{% block menu %}
    <li><a href="{{ path('factura_search') }}">Facturar cita</a></li>
    <li><a href="{{ path('factura_arqueo') }}" class="sub_sel">Cierre de caja</a></li>
    <li><a href="{{ path('factura_cliente_list') }}">Facturar cliente</a></li>
    <li><a href="{{ path('factura_reporte_medico') }}">Listado Medico</a></li>
    <li><a href="{{ path('factura_admision_search') }}">Editar admisi√≥n</a></li>
    <li><a href="{{ path('factura_rips_search') }}">RIPS</a></li>
{% endblock %}

{% block cuerpo %}

{% if app.session.flash('info') %}
    <div class="success">
        <span>{{ app.session.flash('info') }}</span>
    </div>
{% endif %}
    <div>
    	<select id="sede">
    	    <option value="">Seleccione una sede</option>
    	    {% for sede in sedes %} 
      			<option value="{{ sede.id }}" data-url="{{ url('factura_arqueo_imprimir', {'sede': sede.id}) }}">
      			{{ sede.nombre }}</option>
       		{% endfor %}       
      	</select>
    </div>	      		
	      		
{% endblock %}
{% block javascripts %}
<script type="text/javascript">

		var lista = document.getElementById('sede');

		if(lista == "")
		{
		}else{
			lista.onchange = function() {
			    var url = lista.options[lista.selectedIndex].getAttribute('data-url');
			    window.location = url;
			};
		}

</script>

{% endblock %}