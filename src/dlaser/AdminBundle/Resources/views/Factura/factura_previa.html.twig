{% extends "AdminBundle::adminLayout.html.twig" %}

{% block header %}
	{% include 'AdminBundle:includes:factura.html.twig' %}
{% endblock %}

{% block titulo %}Factura de venta{% endblock %}

{% block menu %}
    <li><a href="{{ path('factura_search') }}">Facturar cita</a></li>
    <li><a href="{{ path('factura_arqueo') }}">Cierre de caja</a></li>
    <li><a href="{{ path('factura_cliente_list') }}" class="sub_sel">Facturar cliente</a></li>
    <li><a href="{{ path('factura_reporte_medico') }}">Listado Medico</a></li>
	<li><a href="{{ path('factura_admision_search') }}">Editar admisión</a></li>
	<li><a href="{{ path('factura_rips_search') }}">RIPS</a></li>
{% endblock %}

{% block cuerpo %}

{% if app.session.flash('info') %}
    <div class="success">
        <span>{{ app.session.flash('info') }}</span>
    </div>
{% endif %}

<table>
	<tbody>
		<tr>
			<td>Fecha:</td>
			<td>{{ date('now')|date('d/m/Y') }}</td>
		</tr>
		<tr>
			<td>Empresa:</td>
			<td>{{ cliente.nombre}}</td>
		</tr>
		<tr>
			<td>Nit:</td>
			<td>{{ cliente.nit}}</td>
		</tr>
		<tr>
			<td>Dirección:</td>
			<td></td>
		</tr>
		<tr>
			<td>Teléfono:</td>
			<td></td>
		</tr>
	</tbody>
</table>

<form action="{{ path('factura_final_save', {'cliente': cliente.id, 'sede': sede.id}) }}" onSubmit="return confirm('Seguro de querer generar la factura?');" method="post">
    <fieldset>
    	<legend>Datos de la factura</legend>
    
    	{{ form_widget(form) }}
    </fieldset>
    
    <button class="action blue" type="submit">
        <span class="label">Generar</span>
    </button>
    
</form>
	      		
{% endblock %}