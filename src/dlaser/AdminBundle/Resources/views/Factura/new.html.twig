{% extends "AdminBundle::adminLayout.html.twig" %}

{% block header %}
	{% if is_granted('ROLE_ADMIN') %}    
		{% include 'AdminBundle:includes:parametrizar.html.twig' %}
	{% elseif is_granted('ROLE_AUX') %}
		{% include 'AdminBundle:includes:factura.html.twig' %}
	{% endif %}
{% endblock %}

{% block titulo %}Nueva admisión{% endblock %}

{% block menu %}
	{% if is_granted('ROLE_ADMIN') %}
	    <li><a href="{{ path('empresa_list') }}">Empresa</a></li>
	    <li><a href="{{ path('cliente_list') }}">Cliente</a></li>
	    <li><a href="{{ path('cargo_list') }}">Cargo</a></li>
	    <li><a href="{{ path('paciente_list') }}">Paciente</a></li>
	    <li><a href="#" class="sub_sel">Factura</a></li>
	    <li><a href="{{ path('usuario_list') }}">Usuario</a></li>
	{% endif %}
{% endblock %}

{% block cuerpo %}

<form action="{{ path('factura_save', {'cupo' : cupo.id}) }}" onsubmit="return confirm('Seguro que desea crear la factura?')"method="post" {{ form_enctype(form) }}>
    <fieldset>
    	<legend>Datos de la admisión</legend>
    	
    	<div class="grid_11">
    	   <label>Identificación :</label>
    	        <span>{{ cupo.paciente.tipoId }} - {{ cupo.paciente.identificacion }}</span><br />
    	        
    	    <hr />
    	    
    	    <label>Paciente :</label>
    	        <span>{{ cupo.paciente.priNombre }} {{ cupo.paciente.segNombre }} {{ cupo.paciente.priApellido }} {{ cupo.paciente.segApellido }}</span>
    	    
    	    <hr />
    	    
    	    <label>Cliente :</label>
    	    	<span>{{ cliente.nombre }}</span>
    	    
    	    <hr />
    	    
    	    <label>Actividad :</label>
    	        <span>{{ cupo.cargo.cups }} - {{ cupo.cargo.nombre }}</span><br />
    	        
    	    <hr />
    	    
    	    <label>Valor :</label>
    	        <span>
    	            ${% if actividad %}
                        {{ actividad }}
                     {% else %}                         
                     	{{ (cupo.cargo.valor + ((cupo.cargo.valor * contrato.porcentaje)/100)) | number_format(0, '.', ',') }}
                     {% endif %}</span>
                     
            <hr />
    	        
    	</div>
    	
    	{{ form_widget(form) }}
    </fieldset>
    
    <button class="action blue" type="submit">
        <span class="label">Crear</span>
    </button>
    
</form>
{% endblock %}