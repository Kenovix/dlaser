{% extends "AdminBundle::adminLayout.html.twig" %}

{% block header %}  
	{% include 'AdminBundle:includes:parametrizar.html.twig' %}
{% endblock %}

{% block titulo %}Factura de venta{% endblock %}

{% block menu %}
	    <li><a href="{{ path('factura_search') }}">Facturar cita</a></li>
	    <li><a href="{{ path('factura_arqueo') }}">Cierre de caja</a></li>
	    <li><a href="{{ path('factura_cliente_list') }}" class="sub_sel">Facturar cliente</a></li>
	    <li><a href="{{ path('factura_reporte_medico') }}">Listado Medico</a></li>
	    <li><a href="{{ path('factura_admision_search') }}">Editar admisi√≥n</a></li>
	    <li><a href="{{ path('factura_rips_search') }}">RIPS</a></li>
{% endblock %}

{% block cuerpo %}
{% if app.session.flash('info') %}
    <div class="success">
        <span>{{ app.session.flash('info') }}</span>
    </div>
{% endif %}
<table>
        <tbody>
        	<tr>
            	<th><b>Factura No.</b></th>
                <td>{{entity.id}}</td>
                
            </tr>
            <tr>
        		<th><b>Fecha:</b></th>
                <td>{{entity.fecha | date('d-m-Y')}}</td>
            </tr>
            <tr>
        		<th><b>Cliente:</b></th>
                <td>{{entity.cliente.nombre}}</td>
            </tr>    
            <tr>
                <th><b>Nit:</b></th>
                <td>{{entity.cliente.nit}}</td>
            </tr>
            <tr>
            	<th><b>Subtotal:</b></th>
                <td>{{ entity.subtotal }}</td>
            </tr>
            <tr>
            	<th><b>Iva:</b></th>
                <td>{{entity.iva}}</td>
            </tr>
            <tr>
            	<th><b>Total:</b></th>
                <td>{{(entity.subtotal+entity.iva)|number_format(0)}}</td>
            </tr>            
            <tr>
            	<th><b>Nota:</b></th>
                <td>{{entity.nota}}</td>
             </tr>
        </tbody>
    </table>

<a href="{{ path('factura_final_imprimir', { 'id': entity.id }) }}" class="button blue"><span class="label">Imprimir</span></a>
<a href="{{ path('factura_final_rips', { 'id': entity.id }) }}" class="button blue"><span class="label">Generar RIPS</span></a>

{% endblock %}