{% extends "AdminBundle::adminLayout.html.twig" %}

{% block header %}
	{% include 'AdminBundle:includes:factura.html.twig' %}
{% endblock %}

{% block titulo %}Buscar admisión{% endblock %}

{% block menu %}
	    <li><a href="{{ path('factura_search') }}">Facturar cita</a></li>
	    <li><a href="{{ path('factura_arqueo') }}">Cierre de caja</a></li>
	    <li><a href="{{ path('factura_cliente_list') }}">Facturar cliente</a></li>
	    <li><a href="{{ path('factura_reporte_medico') }}">Listado Medico</a></li>
	    <li><a href="{{ path('factura_admision_search') }}" class="sub_sel">Editar admisión</a></li>
	    <li><a href="{{ path('factura_rips_search') }}">RIPS</a></li>
{% endblock %}

{% block cuerpo %}

{% if app.session.flash('info') %}
    <div class="success">
        <span>{{ app.session.flash('info') }}</span>
    </div>
{% endif %}

		<form action="{{ path('factura_admision_list') }}" method="post">
		    <fieldset>
		    	<legend>Datos de la admisión</legend>
		    	
				<div>
		    	    <label for="valor">Parametro</label>
		    	        <input type="text" name="valor" id="valor" autofocus="autofocus" placeholder="Ingrese el parametro de busqueda" size="30" />
		    	</div>
		    	
		    	<div>
		    	    <input type = "radio" name = "parametro" id = "identificacion" value = "identificacion" checked = "checked" />
		                <label for = "identificacion">Identificación</label>
		            
		            <input type = "radio" name = "parametro" id = "codigo" value = "codigo" />
		                <label for = "codigo">Código</label>
		    	</div>
		    </fieldset>   	
    	
    	<button class="action blue" type="submit" id="buscar">
            <span class="label">Buscar</span>
        </button>    
</form>
{% endblock %}