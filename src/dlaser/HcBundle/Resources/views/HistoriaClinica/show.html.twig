            <th>Sistole</th>
            <td>{{ entity.sistole }}</td>
         </tr>
         <tr>
            <th>Diastole</th>
            <td>{{ entity.diastole }}</td>
         </tr>
         <tr>
            <th>frecuencia Cardiaca</th>
            <td>{{ entity.fC }}</td>
         </tr>
         <tr>
            <th>frecuencia Repiratoria</th>
            <td>{{ entity.fR }}</td>
         </tr>
         <tr>
            <th>Peso</th>
            <td>{{ entity.peso }}</td>
         </tr>
         <tr>
            <th>Estatura</th>
            <td>{{ entity.estatura }}</td>
         </tr>
         <tr>
            <th>hta</th>
            <td>{{ entity.hta }}</td>
         </tr>
         <tr>
            <th>Diabetes</th>
            <td>{{ entity.diabetes }}</td>
         </tr>
         <tr>
            <th>Dislipidemia</th>
            <td>{{ entity.dislipidemia }}</td>
         </tr>
         <tr>
            <th>Tabaquismo</th>
            <td>{{ entity.tabaquismo }}</td>
         </tr>
         <tr>
            <th>Obesidad</th>
            <td>{{ entity.obesidad }}</td>
         </tr>
         <tr>
            <th>Ante Familiar</th>
            <td>{{ entity.anteFamiliar }}</td>
         </tr>
         <tr>
            <th>Sedentarismo</th>
