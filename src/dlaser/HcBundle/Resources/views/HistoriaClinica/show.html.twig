            <td>{{ entity.exaFisico }}</td>
         </tr>
         <tr>
            <th>Interconsulta</th>
            <td>{{ entity.interconsulta }}</td>
         </tr>
         <tr>
            <th>Motivo Inter</th>
            <td>{{ entity.motivoInter }}</td>
         </tr>
         <tr>
            <th>Manejo</th>
            <td>{{ entity.manejo }}</td>
         </tr>
         <tr>
            <th>Control</th>
            <td>{{ entity.control }}</td>
         </tr>
         <tr>
            <th>Ctrl Prioritario</th>
            <td>{{ entity.ctrlPrioritario }}</td>
         </tr>
         <tr>
            <th>Pos Fecha</th>
            <td>{{ entity.postfecha }}</td>
         </tr>         
        </tbody>
    </table>
        
    <a href="{{ path('hc_edit', { 'id': entity.id }) }}" class="button left"><span class="label">Modificar historia</span></a>
    <a href="{{ path('hc_search') }}" class="button middle"><span class="label">Regresar al listado</span></a>
        
{% endblock %}
    
