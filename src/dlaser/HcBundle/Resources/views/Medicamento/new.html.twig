{% extends "HcBundle::hcLayout.html.twig" %}

{% block header %}
    {% include 'HcBundle::includes/HistoriaClinica.html.twig' %}
{% endblock %}

{% block titulo %}Nuevo Medicamento{% endblock %}

{% block menu %}
    <li><a href="{{ path('medicamento_list') }}" class="sub_sel">Medicamento</a></li>
    <li><a href="{{ path('examen_list') }}">Examen</a></li>    
    <li><a href="{{ path('dx_userDx') }}" >Diagnostico</a></li>
    <li><a href="{{ path('hc_search') }}">Historia clinica</a></li>
{% endblock %}

{% block cuerpo %}

{% if app.session.flash('info') %}
    <div class="success">
        <span>{{ app.session.flash('info') }}</span>
    </div>
{% endif %}

<form action="{{ path('medicamento_save')}}" method="post" {{ form_enctype(form) }}>
    <fieldset>
    	<legend>Datos del medicamento</legend>
    	{{ form_widget(form) }}
    </fieldset>
    
    <button class="action blue" type="submit">
        <span class="label">Crear</span>
    </button>
    
    <a href="{{ path('medicamento_list') }}" class="button left"><span class="label">Regresar al listado</span></a>
    
</form>
{% endblock %}
