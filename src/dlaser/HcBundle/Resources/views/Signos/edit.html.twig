{% extends "HcBundle::hcLayout.html.twig" %}

{% block header %}
    {% include 'HcBundle:includes:HistoriaClinica.html.twig' %}
{% endblock %}

{% block titulo %}Modificar signos de {{ paciente.priNombre}} {{ paciente.priApellido }}{% endblock %}

{% block menu %}    
	<li><a href="{{ path('signos_edit',{'id':factura.id}) }}"  class="sub_sel">Signos</a></li>
    <li><a href="{{ path('signos_examen',{'id':factura.id}) }}">Examenes</a></li>
{% endblock %}

{% block cuerpo %}
{% if app.session.flash('info') %}
    <div class="success">
        <span>{{ app.session.flash('info') }}</span>
    </div>
{% endif %}

<form action="{{ path('signos_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <fieldset>
    	<legend>Signos del paciente</legend>
    	{{ form_widget(edit_form) }}
    </fieldset>
    
    <button class="action blue" type="submit">
        <span class="label">Modificar</span>
    </button>    
</form>
{% endblock %}