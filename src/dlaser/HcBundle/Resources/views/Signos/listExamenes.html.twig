{% extends "HcBundle::hcLayout.html.twig" %}

{% block header %}
    {% include 'HcBundle::includes/HistoriaClinica.html.twig' %}
{% endblock %}

{% block titulo %}Examenes del paciente {{ paciente.priNombre}} {{ paciente.priApellido }}{% endblock %}

{% block menu %}    
    <li><a href="{{ path('signos_edit',{'id':factura.id}) }}">Signos</a></li>
    <li><a href="{{ path('signos_examen',{'id':factura.id}) }}"  class="sub_sel">Examenes</a></li>    
{% endblock %}

{% block cuerpo %}

{% if app.session.flash('info') %}
    <div class="success">
        <span>{{ app.session.flash('info') }}</span>
    </div>
{% endif %}

  <table>
     <thead>
            <tr>
                <th>Nombre</th>
                <th>Fecha</th>
                <th>Resultado</th>
                <th>Opcion</th>                
            </tr>
        </thead>
        <tbody>   
        {% for examen in examenes %}            
            <tr>
                <td>{{ examen.nombre}}</td>
                <td>{{ examen.fecha | date('d-m-Y') }}</td>
                <td>{{ examen.resultado}}</td>
                <td>                
                <a href="{{ path('hc_editHcExamen',{'id':examen.id}) }}" rel="#overlay"  class="button left"><span class="label">Modificar</span></a>         	               
    			</td>
            </tr>
        {% endfor %}
      </tbody>
    </table>
    
    <a href="{{ path('hcExamen_new', {'factura':factura.id}) }}" class="button left"><span class="label">Crear nuevo</span></a> 
    

{% endblock %}

{% block javascripts %}
<script type="text/javascript">

	
</script>
{% endblock %}