{% extends "AdminBundle::adminLayout.html.twig" %}

{% block header %}
	{% include 'HcBundle::includes/HistoriaClinica.html.twig' %}
{% endblock %}

{% block titulo %}Detalles del examen{% endblock %}

{% block menu %}
    <li><a href="{{ path('empresa_list') }}">Empresa</a></li>
    <li><a href="{{ path('cliente_list') }}">Cliente</a></li>
    <li><a href="#" >Medicamento</a></li>
    <li><a href="{{ path('hc_search') }}" >Historia clinica</a></li>
    <li><a href="#" class="sub_sel">Examen</a></li>
    <li><a href="{{ path('usuario_list') }}">Usuario</a></li> 
{% endblock %}

{% block cuerpo %}

        
    
{% if app.session.flash('info') %}
    <div class="success">
        <span>{{ app.session.flash('info') }}</span>
    </div>
{% endif %}


    <table>
        <tbody>
         <tr>
            <th>Codigo</th>
            <td>{{ entity.codigo }}</td>
         </tr>
         <tr>
            <th>Nombre</th>
            <td>{{ entity.nombre }}</td>
         </tr>
         <tr>
            <th>Tipo</th>
            <td>{{ entity.tipo }}</td>
         </tr>
        </tbody>
    </table>
        
    <a href="{{ path('examen_edit', { 'id': entity.id }) }}" class="button left"><span class="label">Modificar examen</span></a>
    <a href="#" class="button middle"><span class="label">Regresar al listado</span></a>

    
{% endblock %}
    
